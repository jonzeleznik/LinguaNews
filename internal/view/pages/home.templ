package pages

import (
	"web-scrape/internal/view/layout"
	"web-scrape/internal/scraper"
)

templ Home(posts []scraper.HWRPost) {
	@layout.Base() {
		<div id="content">
			for _, item := range posts {
				<button
					type="submit"
					name="text"
					value={ item.Content }
					hx-post="/get-info"
					hx-target="#content"
					hx-swap="outerHTML"
				>{ item.Title }</button>
			}
		</div>
	}
}
